            @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div>
                @Html.LabelFor(model => model.PickupDay, "Pickup Day", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>

            <div class="btn-group">

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(model => model.PickupDay, DayOfWeek.Sunday, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.PickupDay, "Sunday", new { @class = "form-check-label label label-primary" })
                    @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
                </div>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(model => model.PickupDay, DayOfWeek.Monday, new { @class = "form-check-input" })
