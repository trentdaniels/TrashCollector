                    @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
                </div>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(model => model.PickupDay, DayOfWeek.Tuesday, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.PickupDay, "Tuesday", new { @class = "form-check-label label label-primary" })
                    @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
                </div>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(model => model.PickupDay, DayOfWeek.Wednesday, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.PickupDay, "Wednesday", new { @class = "form-check-label label label-primary" })
                    @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
                </div>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(model => model.PickupDay, DayOfWeek.Thursday, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.PickupDay, "Thursday", new { @class = "form-check-label label label-primary" })
                    @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
                </div>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(model => model.PickupDay, DayOfWeek.Friday, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.PickupDay, "Friday", new { @class = "form-check-label label label-primary" })
                    @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
                </div>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(model => model.PickupDay, DayOfWeek.Saturday, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.PickupDay, "Saturday", new { @class = "form-check-label label label-primary" })
                    @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
                </div>


            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save Changes" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    